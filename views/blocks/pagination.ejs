<nav aria-label="Page navigation example pagination">
    <ul class="pagination justify-content-end">
        <li class="page-item <%= pagination.currentPage + 1 == 1 && 'disabled' %>">
            <a class="page-link" href="<%= `${currentPath}?page=${pagination.currentPage}` %>"
                aria-label="Previous"><span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span></a>
        </li>
        <% for(let p = 1; p <= pagination.allPage; p++){ %>
        <li class="page-item <%= p - 1 == pagination.currentPage && 'active' %>"><a class="page-link"
                href="<%= `${currentPath}?page=${p}` %>"><%= p %></a></li>

        <%} %>
        <!-- <li class=" page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li> -->
        <li class="page-item <%= pagination.currentPage + 1 == pagination.allPage &&  'disabled' %>">
            <a class="page-link" href="<%= `${currentPath}?page=${pagination.currentPage + 2}` %>"
                aria-label="Next"><span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span></a>
        </li>
    </ul>
</nav>