<% extend('layout/base') %>
<h1 class='text-center form-title'><%= title%></h1>
<div class="row justify-content-center">
    <form action="/post" method="POST" class='col-5 min-width-custom'>
        <div class="form-group">
            <input type="text" name="entry[title]" placeholder="Title" class="form-control" />
        </div>
        <div class="form-group">
            <textarea rows='10' type="text" name="entry[body]" placeholder="Body" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
</div>
</form>